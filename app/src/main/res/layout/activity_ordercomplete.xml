<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ordercomplete">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:text="Congrats \n Your Order Placed"
            android:textAlignment="center"
            android:textColor="#53E88B"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:src="@drawable/orderplaced" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/gohomeshape"
            android:id="@+id/Gohome"
            android:layout_width="157dp"
            android:layout_height="57dp"
            android:elevation="2dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_marginTop="32dp"
            android:text="Go Home"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/courier_prime"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>